<h1>Show Service</h1>

<h2> <%= @service.title  %></h2>
<p><%= @service.user.name %></p>
<p><%= @service.description %></p>
<p> $<%= @service.price %> </p>
<p> <%= @service.location %> </p>

<p> <%= cl_image_tag @service.photo.key, crop: :scale, width: 150, cloud_name: 'boggyboi' %> </p>

<p> 
    <%= link_to "Back", services_path %> 
    <%= link_to "Edit", edit_service_path if policy(@service).edit? %>
    <%= link_to "Delete", @service, method: :delete, data: {confirm: "Are you sure?"} if policy(@service).destroy? %>
</p>

<% if user_signed_in? == false || current_user.id != @service.user_id  %>
    <%= link_to "Message Owner", new_conversation_path, class: 'btn btn-primary my-2' %>
    <% else %>
<% end %>