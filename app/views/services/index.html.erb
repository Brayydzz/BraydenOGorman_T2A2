<h1> Show Services </h1>

<p> <%= link_to "Create Service Listing", new_service_path %> </p>
<%= paginate @services %>
<div>
    <table>
        <tr>
            <th>Listing Owner</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Location</th>
        </tr>
        <% @services.each do |service| %>
            <tr>
                <td><%= service.user.name %></td>
                <td> <%= link_to service.title, service_path(service)%> </td>
                <td><%= service.description %></td>
                <td> $<%= service.price %> </td>
                <td> <%= service.location %> </td>
                <td>    
                    <%= link_to "Edit", edit_service_path(service) if policy(service).edit? %>
                |
                    <%= link_to "Delete", service, method: :delete, data: {confirm: "Are you sure" } if policy(service).destroy?  %>
                </td>
            </tr>
        <% end %>
    </table>
</div>