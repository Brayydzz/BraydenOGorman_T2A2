<div class='card text-center'>
    <h1> All conversations</h1>
        <%= paginate @conversations %>
    
    <% @conversations.each do |conversation| %>
        <div>
            <%= link_to conversation.subject + " - " + conversation.recipients.delete_if {|x| x == current_user }[0].name, conversation_path(conversation) %>
            |
            <%= link_to "Delete", conversation_path(conversation), method: :delete, data: {confirm: "Are you sure" } %>
        </div>
    <% end %>
</div>

