<h1> New Conversation </h1>

<%= form_tag conversations_path, method: :post do  %>
    <%= hidden_field_tag :user_id, session[:listing_id] %>
    <div>
        <%= text_field_tag :subject, "Subject" %>
    </div>
    <div>
        <%= text_area_tag :body, "Leave a message!" %>
    </div>

    <%= submit_tag %>
<% end %>